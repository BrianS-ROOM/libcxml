def build(target):
    cmd = './waf configure --prefix=%s/%s' % (target.work_dir_cscript(), target.install_prefix)
    if target.platform == 'linux':
        cmd += ' --static'
    elif target.platform == 'windows':
        cmd += ' --target-windows'
    elif target.platform == 'osx':
        cmd += ' --osx'
    target.command(cmd)
    target.command('./waf build install')
